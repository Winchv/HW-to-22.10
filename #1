#include <iostream>

using namespace std;
int main()
{
    setlocale (0,"RUS");
    int d_0 = 1,m_0 = 1,g_0 = 1583,a = 0,d,m,g,b,e,u,o,s,c,f,w;
    string r;
    do
    {
        cout << "введите число выбранной вами даты(не более 31): ";
        cin >> d;
    }
    while (d >31);
   do
    {
        cout << "введите месяц выбранной вами даты(не более 12): ";
        cin >> m;
    }
    while (m>12);
    do
    {
        cout << "введите год выбранной вами даты(не менее 1583): ";
        cin >> g;
    }
    while (g<1583);
    for(g_0;g_0<g;g_0++)
    {
        if((g_0%4 == 0 && g_0%100 !=0) || (g_0%400 == 0))
        a++;
    }
    s = (a+g-g_0)%7;
    if ((g%4 == 0 && g%100 !=0) || (g%400 == 0))
    {
        int V[12]= {31,60,91,121,152,182,213,244,274,305,335,366};
        a = m - 1;
    c = (V[a]%7);
    f = d %7;
    w = (c+f+s-3)%7;
    string l[7] = {"суббота","воскресенье","понедельник","вторник","среда","четверг","пятница"};
    cout << "Это "<< l[w] << endl;
    }
    else
        {
            int V[12] = {31,59,90,120,151,181,212,243,273,304,334,365};
    a = m - 1;
    c = (V[a]%7);
    f = d %7;
    w = (s+f+c-3)%7;
    string l[7] = {"суббота","воскресенье","понедельник","вторник","среда","четверг","пятница"};
    cout << "Это "<< l[w] << endl;
        }
return 0;
}
