    {
        if((g_0%4 == 0 && g_0%100 !=0) || (g_0%400 == 0))
        a++;
    }
    s = (a+g-g_0)%7;
    if ((g%4 == 0 && g%100 !=0) || (g%400 == 0))
    {
        int V[12]= {31,60,91,121,152,182,213,244,274,305,335,366};
        a = m - 1;
    c = (V[a]%7);
    f = d %7;
    w = (c+f+s)%7;
    if (w = 0)
    {
        r = "суббота";
    }
        else
    if (w = 1)
    {
         r = "воскресенье";
    }
        else
    if (w = 2)
    {
        r = "понедельник";
    }
        else
    if (w = 3)
    {
        r = "вторник";
    }
        else
    if (w = 4)
    {
        r = "среда";
    }
        else
    if (w = 5)
    {
         r = "четверг";
    }
        else
    if (w = 6)
    {
        r = "пятница";
    }
    cout << "Это "<< r << endl;
        }
    else
        {
            int V[12] = {31,59,90,120,151,181,212,243,273,304,334,365};
    a = m - 1;
    c = (V[a]%7);
    f = d %7;
    w = (s+f+c)%7;
    if (w = 0)
        r = "суббота";
        else
    if (w = 1)
        r = "воскресенье";
        else
    if (w = 3)
        r = "вторник";
